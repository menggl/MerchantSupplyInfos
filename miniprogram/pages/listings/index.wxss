/** pages/listings/index.wxss */
page {
  background-color: #f0f2f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.top-bar {
  background-color: #1890FF;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-shrink: 0;
}

.publish-btn {
  background: #fff;
  color: #2fb46f;
  border: none;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  font-weight: 600;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin: 0;
}

.content {
  flex: 1;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.req-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f5f5f5;
}

.req-title-group {
  display: flex;
  flex-direction: column;
}

.req-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.req-brand {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.req-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  margin-left: 20rpx;
}

.req-body {
  margin-bottom: 24rpx;
}

.req-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  align-items: flex-start;
}

.req-label {
  color: #666;
  white-space: nowrap;
  width: 140rpx;
}

.req-value {
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
}

.req-price {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 32rpx;
}

.btn-quote {
  width: 100%;
  height: 72rpx;
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: white;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-quote:active {
  opacity: 0.9;
}

.icon-phone-css {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid white;
  border-radius: 8rpx;
  margin-right: 12rpx;
  position: relative;
}
.icon-phone-css::before {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 8rpx;
  width: 16rpx;
  height: 4rpx;
  background: white;
}
