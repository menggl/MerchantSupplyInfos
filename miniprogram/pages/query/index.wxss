/** pages/query/index.wxss */
page {
  background-color: #f0f2f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
}

.nav-bar-extension {
  background-color: #1890FF;
  padding: 20rpx 30rpx;
  flex-shrink: 0;
}

.search-input-mock {
  background-color: rgba(255,255,255,0.2);
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
}

.content-container {
  flex: 1;
  display: flex;
  overflow: hidden;
  background-color: #fff;
}

/* Sidebar */
.sidebar {
  width: 180rpx;
  background-color: #f7f8fa;
  border-right: 1px solid #eee;
  flex-shrink: 0;
  height: 100%;
}

.brand-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.brand-item.active {
  background-color: #fff;
  color: #4facfe;
  font-weight: bold;
}

.brand-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 30rpx;
  bottom: 30rpx;
  width: 8rpx;
  background-color: #4facfe;
  border-radius: 0 4rpx 4rpx 0;
}

/* Main Area */
.main-area {
  flex: 1;
  height: 100%;
  background-color: #fff;
}

.search-form-view {
  padding: 30rpx;
}

.type-toggle {
  display: flex;
  gap: 10rpx;
  margin-bottom: 30rpx;
  background: #eef2f7;
  border-radius: 24rpx;
  padding: 6rpx;
}

.type-btn {
  flex: 1;
  height: 60rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}

.type-btn.active {
  background: #ffffff;
  color: #c94f4f;
  border: 1px solid #d9dfe7;
}

.selector-group {
  background-color: #fff;
  margin-bottom: 40rpx;
}

.selector-item {
  background-color: #f5f5f5;
  height: 88rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.selector-value {
  color: #666;
}

.action-btn {
  background: #4facfe;
  color: white;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(79, 172, 254, 0.3);
}

/* List Selection View */
.list-selection-view {
  width: 100%;
  background: #fff;
}

.list-header {
  height: 88rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.back-icon {
  margin-right: 20rpx;
  color: #4facfe;
  font-weight: bold;
}

.list-item {
  height: 100rpx;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  font-size: 28rpx;
}
