/** index.wxss */
page {
  background-color: #f0f2f5;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.welcome-section {
  padding: 40rpx;
  text-align: center;
  color: #333;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.date-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.welcome-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #999;
}

.main-content {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  margin-top: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.circle-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
  transition: transform 0.2s;
}

.circle-btn:active {
  transform: scale(0.95);
}

.btn-buy {
  background: linear-gradient(135deg, #1890FF, #4facfe);
}

.btn-sell {
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
}

.action-label {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* Simple CSS Icons */
.icon-search-css {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid white;
  border-radius: 50%;
  position: relative;
}
.icon-search-css::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 6rpx;
  background: white;
  bottom: -4rpx;
  right: -10rpx;
  transform: rotate(45deg);
}

.icon-list-css {
  width: 60rpx;
  height: 60rpx;
  background: transparent;
  position: relative;
  box-shadow: 0 10rpx 0 0 white, 0 30rpx 0 0 white, 0 50rpx 0 0 white;
  margin-top: -30rpx;
}
