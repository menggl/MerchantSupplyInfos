/** pages/mine/index.wxss */
page {
  background-color: #f0f2f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header-area {
  background: linear-gradient(135deg, #4facfe 0%, #764ba2 100%);
  padding: 40rpx 40rpx 48rpx;
  color: white;
  position: relative;
  flex-shrink: 0;
}

.header-top {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10rpx;
}

.header-icon {
  font-size: 40rpx;
  margin-left: 30rpx;
  opacity: 0.9;
}

.user-profile {
  display: flex;
  align-items: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  background-color: rgba(255,255,255,0.3);
  border-radius: 50%;
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255,255,255,0.5);
  overflow: hidden;
}

.avatar-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: white;
  border-radius: 50%;
}

.user-info {
  flex: 1;
}

.user-phone {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.user-validity {
  font-size: 24rpx;
  opacity: 0.8;
  background: rgba(0,0,0,0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.check-in-btn {
  background: rgba(255,255,255,0.2);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255,255,255,0.3);
}

.content {
  flex: 1;
  padding: 24rpx 24rpx;
  margin-top: 0;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 28rpx;
  background: #4facfe;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx 16rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-item:active {
  opacity: 0.7;
}

.grid-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  color: white;
  font-size: 44rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
}

.grid-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

.bg-blue { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
.bg-purple { background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); }
.bg-orange { background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%); }
.bg-yellow { background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); }
.bg-green { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
