page {
  background-color: #f0f2f5;
  padding-bottom: 120rpx; /* Space for FAB */
}

.container {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.req-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.req-title-group {
  display: flex;
  flex-direction: column;
}

.req-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.req-brand {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.req-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  margin-left: 20rpx;
}

.req-body {
  margin-bottom: 24rpx;
}

.req-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  align-items: flex-start;
}

.req-label {
  color: #666;
  white-space: nowrap;
  width: 140rpx;
}

.req-value {
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
}

.req-price {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 32rpx;
}

.req-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
}

.btn-action {
  padding: 0 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: 1rpx solid #ddd;
  color: #666;
  background: white;
  font-weight: 500;
  margin: 0; /* Override default button margin */
}

.btn-action::after {
  border: none;
}

.btn-primary {
  border-color: #4facfe;
  color: #4facfe;
}

.btn-danger {
  border-color: #ff4d4f;
  color: #ff4d4f;
}

/* Floating Action Button */
.fab-add {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #1890FF;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
  height: 88rpx;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  z-index: 100;
}

.fab-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  line-height: 1;
  margin-top: -4rpx;
}

.fab-text {
  font-size: 32rpx;
  font-weight: 600;
}
