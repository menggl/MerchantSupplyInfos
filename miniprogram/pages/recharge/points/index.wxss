page {
  background-color: #f2f3f5;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.content {
  padding: 20rpx 28rpx;
}

.section-title {
  font-size: 22rpx;
  color: #858c96;
  margin: 16rpx 0 12rpx 8rpx;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  overflow: hidden;
}

.summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.summary-item {
  font-size: 24rpx;
  color: #374151;
}

.summary-value {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 600;
}

.form-row {
  display: flex;
  align-items: center;
  min-height: 88rpx;
  border-top: 1rpx solid #f2f2f2;
}

.form-label {
  width: 180rpx;
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  flex: 1;
  border: none;
  font-size: 26rpx;
  color: #1a1a1a;
  text-align: right;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 600;
}

.hint {
  font-size: 22rpx;
  color: #6b7280;
  margin-top: 12rpx;
  text-align: right;
}

.btn-pay {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin-top: 24rpx;
}

.btn-disabled {
  background: #ddd;
  color: #999;
}
