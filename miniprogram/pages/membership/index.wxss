page {
  background-color: #f2f3f5;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.content {
  padding: 20rpx 28rpx;
}

.section-title {
  font-size: 22rpx;
  color: #858c96;
  margin: 16rpx 0 12rpx 8rpx;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  overflow: hidden;
}

.summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.summary-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.vip-badge {
  font-size: 24rpx;
  color: #fff;
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-weight: 600;
}

.merchant-name {
  font-size: 26rpx;
  color: #1f2937;
  font-weight: 600;
}

.status {
  font-size: 24rpx;
  font-weight: 600;
}

.status-active {
  color: #10b981;
}

.status-expired {
  color: #ef4444;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 80rpx;
  border-top: 1rpx solid #f2f2f2;
}

.info-label {
  font-size: 24rpx;
  color: #374151;
}

.info-value {
  font-size: 24rpx;
  color: #1f2937;
  font-weight: 500;
}

.btn-group {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn {
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 24rpx;
  border: none;
  border-radius: 34rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

.btn-secondary {
  background: #eef2f7;
  color: #4a67a1;
}

.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 100;
}

.modal-panel {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  max-height: 70vh;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.12);
  z-index: 101;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  padding: 24rpx 28rpx;
  border-bottom: 1rpx solid #f0f2f5;
  text-align: center;
}

.modal-content {
  padding: 24rpx 28rpx;
  font-size: 24rpx;
  color: #374151;
  line-height: 1.6;
  overflow-y: auto;
  max-height: 600rpx;
}

.right-item {
  margin-bottom: 8rpx;
}

.modal-close {
  width: calc(100% - 56rpx);
  margin: 20rpx 28rpx 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  border: none;
  border-radius: 36rpx;
  background: #eef2f7;
  color: #4a67a1;
  font-size: 24rpx;
  font-weight: 600;
}
