page {
  background-color: #f2f3f5;
  height: 100%;
}
.container {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}
.section-title {
  font-size: 24rpx;
  color: #858c96;
  margin: 32rpx 0 12rpx 8rpx;
  font-weight: 500;
}
.section-title:first-child {
  margin-top: 8rpx;
}
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 0;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  overflow: hidden;
}
.selected-product {
  padding: 32rpx;
}
.sp-model {
  font-size: 26rpx;
  font-weight: 600;
  color: #2f3a4b;
  line-height: 1.35;
  word-break: break-word;
}
.sp-sep {
  color: #c4c8d0;
  margin: 0 8rpx;
  font-weight: 600;
}
.sp-seg {
  color: #2f3a4b;
}

.form-row {
  display: flex;
  align-items: center;
  min-height: 96rpx;
  border-bottom: 1px solid #f2f2f2;
}
.form-row:last-child {
  border-bottom: none;
}
.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.form-input {
  flex: 1;
  border: none;
  font-size: 28rpx;
  color: #1a1a1a;
  text-align: right;
  height: 96rpx;
  line-height: 96rpx;
}
.price-group {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
  gap: 12rpx;
}
.price-input {
  width: 140rpx;
  text-align: center;
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  height: 60rpx;
}
.price-sep {
  color: #c4c8d0;
  font-weight: bold;
  font-size: 24rpx;
}

.btn-publish {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 48rpx;
  box-shadow: 0 16rpx 40rpx rgba(79, 172, 254, 0.2);
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 24rpx 0;
}
.photo-item {
  width: calc((100% - 32rpx) / 3);
  height: 200rpx; /* Approximate aspect ratio 1:1 */
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
}
.photo-img {
  width: 100%;
  height: 100%;
}
.photo-add {
  border: 1px dashed #cfd8e3;
  color: #9aa5b1;
  font-size: 48rpx;
}
.photo-remove {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0,0,0,0.45);
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  z-index: 10;
}
.picker-val {
    font-size: 28rpx;
    color: #333;
}
