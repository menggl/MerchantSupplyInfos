page {
  background-color: #f0f2f5;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.subtitle-bar {
  background-color: #1890FF;
  color: #fff;
  padding: 0 30rpx 20rpx;
  font-size: 24rpx;
}
.content {
  flex: 1;
  padding: 8rpx;
  box-sizing: border-box;
}
.results-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8rpx;
  padding-bottom: 20rpx;
}
.result-card {
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 20rpx;
  padding: 6rpx 6rpx 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.rc-image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin-bottom: 8rpx;
}
.rc-line {
  display: flex;
  gap: 12rpx;
  align-items: baseline;
  margin-bottom: 6rpx;
  padding: 0 8rpx;
}
.rc-merchant {
  font-size: 24rpx;
  color: #faad14;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rc-doorplate {
  font-size: 24rpx;
  color: #4facfe;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rc-label {
  font-size: 24rpx;
  color: #666;
}
.rc-price-value {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 700;
}
.rc-value {
  font-size: 24rpx;
  color: #666;
}

/* Text List Styles */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 16rpx;
}
.text-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.tc-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid #f5f5f5;
}
.tc-title-group {
  display: flex;
  flex-direction: column;
}
.tc-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}
.tc-config {
  font-size: 24rpx;
  color: #666;
}
.tc-status {
  font-size: 24rpx;
  color: #1890FF;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.tc-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.tc-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}
.tc-label {
  color: #999;
  width: 80rpx;
}
.tc-value {
  color: #333;
  flex: 1;
  text-align: right;
}
.tc-price {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 28rpx;
  flex: 1;
  text-align: right;
}
