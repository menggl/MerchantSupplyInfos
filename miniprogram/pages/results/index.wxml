<view class="container">
  <view class="subtitle-bar" wx:if="{{subtitle}}">
    <text>{{subtitle}}</text>
  </view>
  <scroll-view scroll-y class="content" enable-flex>
    <!-- Used Phone: Image Grid -->
    <view class="results-grid" wx:if="{{type === 'secondhand'}}">
      <view class="result-card" wx:for="{{results}}" wx:key="id" bindtap="onTapCard" data-item="{{item}}">
        <image class="rc-image" src="{{item.img}}" mode="aspectFill"></image>
        <view class="rc-line">
          <text class="rc-merchant">{{item.shop}}({{item.city}})</text>
        </view>
        <view class="rc-line">
          <text class="rc-doorplate">{{item.doorplate}}</text>
        </view>
        <view class="rc-line">
          <text class="rc-label">最低价格</text>
          <text class="rc-price-value">¥{{item.minPrice}}</text>
        </view>
        <view class="rc-line">
          <text class="rc-label">上架时间</text>
          <text class="rc-value">{{item.date}}</text>
        </view>
      </view>
    </view>

    <!-- New Phone: Text List -->
    <view class="results-list" wx:else>
      <view class="text-card" wx:for="{{results}}" wx:key="id" bindtap="onTapCard" data-item="{{item}}">
        <view class="tc-header">
           <view class="tc-title-group">
             <text class="tc-title">{{item.brand}}</text>
             <text class="tc-config">{{item.config}}</text>
           </view>
           <text class="tc-status">{{item.status}}</text>
        </view>
        <view class="tc-body">
           <view class="tc-row">
              <text class="tc-label">商家</text>
              <text class="tc-value">{{item.shop}} ({{item.city}})</text>
           </view>
           <view class="tc-row">
              <text class="tc-label">档口</text>
              <text class="tc-value">{{item.doorplate}}</text>
           </view>
           <view class="tc-row">
              <text class="tc-label">价格</text>
              <text class="tc-price">¥{{item.minPrice}}</text>
           </view>
            <view class="tc-row">
              <text class="tc-label">时间</text>
              <text class="tc-value">{{item.date}}</text>
           </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
