page {
  background-color: #f5f6f8;
}
.search-bar {
  padding: 10rpx 20rpx;
  background: linear-gradient(90deg, #92b6ff, #5c8dff);
}
.search-input {
  background-color: #ffffff;
  border-radius: 40rpx;
  height: 70rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.container {
  display: flex;
}
.left {
  width: 180rpx;
  background-color: #ffffff;
}
.left-item {
  padding: 28rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  color: #333;
}
.left-item-active {
  color: #1677ff;
  font-weight: 600;
  background-color: #f0f5ff;
}
.right {
  flex: 1;
  background-color: #ffffff;
  margin-left: 20rpx;
  border-radius: 16rpx;
  padding: 20rpx;
}
.panel {
  margin-bottom: 20rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
}
.panel-item {
  padding: 28rpx 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn-search {
  margin-top: 10rpx;
  height: 80rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 12rpx;
}
.cities {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.city {
  width: 190rpx;
  height: 72rpx;
  border-radius: 12rpx;
  background-color: #f3f4f7;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}
.city-active {
  background-color: #1677ff;
  color: #fff;
}

